# ============================================================================
# SEARCH SERVICE CONFIGURATION
# ============================================================================

# Application
PROJECT_NAME=E-commerce Semantic Search
VERSION=1.0.0
DEBUG=true

# API
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=products

# External Services
PRODUCTS_API_URL=http://localhost:8000/api/products

# ============================================================================
# ML MONITORING CONFIGURATION
# ============================================================================

# Monitoring Service
MONITORING_ENABLED=true
MONITORING_SERVICE_URL=http://localhost:8003/api/v1
MONITORING_TIMEOUT_SECONDS=2.0

# Logging Strategy
MONITORING_LOG_ALL_PREDICTIONS=true        # false = use sampling
MONITORING_SAMPLING_RATE=1.0               # 0.1 = log 10% of predictions
MONITORING_LOG_EMBEDDINGS=false            # Save full embeddings (expensive)
MONITORING_BATCH_SIZE=1                    # 1 = immediate, >1 = batch logging

# Performance Thresholds (for local warnings)
MONITORING_WARN_LATENCY_MS=2000
MONITORING_WARN_ERROR_RATE=0.05

# Feature Flags
MONITORING_TRACK_EMBEDDINGS=false          # Calculate embedding stats
MONITORING_TRACK_USER_CONTEXT=true         # Log user/session data
MONITORING_VERBOSE_ERRORS=true             # Log detailed errors

# Retry Configuration
MONITORING_MAX_RETRIES=0                   # Retries if monitoring fails
MONITORING_RETRY_DELAY_MS=100
